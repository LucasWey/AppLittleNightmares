        android:layout_width="404dp"
        android:layout_height="423dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="3dp"
        android:text='@string/o_jogo_se_trata_de_uma_hist_ria_vaga_e_enigm_tica_te_dando_poucos_elementos_para_estabelecer_uma_hist_ria_que_fa_a_sentido_deixando_muito_espa_o_para_seus_jogadores_estipularem_e_criarem_suas_teorias_em_rela_o_aos_acontecimentos_do_jogo_mas_a_base_se_trata_de_uma_garotinha_chamada_six_que_acorda_num_navio_onde_tudo_em_sua_volta_enorme_em_rela_o_a_ela_com_monstros_enormes_e_poderosos_cada_um_com_suas_peculiaridades_onde_ao_longo_de_sua_jornada_ela_tem_crises_de_fome_que_a_fazem_quase_morrer_mas_precisa_sair_desse_lugar_o_mais_r_pido_poss_vel'
