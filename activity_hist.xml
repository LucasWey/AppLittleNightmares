        app:layout_constraintBottom_toTopOf="@+id/txthist"
        app:layout_constraintEnd_toStartOf="@+id/txthist1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
